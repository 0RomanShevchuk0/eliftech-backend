generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Quiz {
  id          String     @id @default(uuid())
  name        String
  description String
  responses   Response[]
  questions   Question[]
}

model Question {
  id    String @id @default(uuid())
  title String
  type  String // replace
  order Int

  quiz_id String
  quiz    Quiz   @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
}

model Response {
  id      String @id @default(uuid())
  quiz_id String
  quiz    Quiz   @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
}
